extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Reset Password

        form(method='POST' action='/updatePass'+'?token='+params.token)
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          div.form-group
            label(for='password2') Password Againg
            input.form-control(type='password' id='password2' placeholder='password again' name='password2')
          button.btn.btn-primary(type='submit') Reset Password 
